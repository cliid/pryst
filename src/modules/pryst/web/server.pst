module web {
    // Server-related functions
    fn host() -> str {
        return "localhost";
    }

    fn port() -> int {
        return 8080;
    }

    fn start() -> bool {
        let server_addr = host();
        let port_str = str(port());
        let msg = "Starting server on " + server_addr + ":" + port_str;
        print(msg);
        return true;
    }

    fn stop() -> void {
        print("Stopping server");
    }
}
