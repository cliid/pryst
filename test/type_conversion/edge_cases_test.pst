// Edge cases for type conversion
fn main() -> int {
    // Test empty string conversions
    print(toString(toInt("")));  // Should print "0"
    print(toString(toFloat("")));  // Should print "0.000000"

    // Test very large numbers
    let largeInt = "2147483647";  // Max 32-bit int
    print(toString(toInt(largeInt)));

    let largeFloat = "1e308";  // Near max double
    print(toString(toFloat(largeFloat)));

    // Test negative numbers
    print(toString(toInt("-42")));
    print(toString(toFloat("-3.14")));

    // Test invalid input handling
    print(toString(toInt("abc")));  // Should print "0"
    print(toString(toFloat("def"))); // Should print "0.000000"

    // Test null termination
    let nullStr = "Test\0with\0nulls";
    print(toString(toInt(nullStr)));
    print(toString(toFloat(nullStr)));

    // Test whitespace handling
    print(toString(toInt("  42  ")));  // Should print "42"
    print(toString(toFloat("  3.14  "))); // Should print "3.140000"

    // Test hex and octal numbers
    print(toString(toInt("0xFF")));  // Should print "255"
    print(toString(toInt("0o77")));  // Should print "63"

    return 0;
}
