// Basic type conversion test cases
fn main() -> int {
    // Test toString conversions
    print(toString(42));        // int to string
    print(toString(3.14));      // float to string
    print(toString(true));      // bool to string

    // Test toInt conversions
    print(toInt("123"));       // string to int
    print(toInt(3.14));        // float to int (truncation)
    print(toInt(true));        // bool to int

    // Test toFloat conversions
    print(toFloat("3.14"));    // string to float
    print(toFloat(42));        // int to float
    print(toFloat(true));      // bool to float

    // Test error cases
    print(toString(null));     // null to string (should return empty string)
    print(toInt("abc"));      // invalid string to int (should return 0)
    print(toFloat("xyz"));    // invalid string to float (should return 0.0)

    return 0;
}
