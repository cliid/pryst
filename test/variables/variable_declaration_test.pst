// Test inferred variable declarations
let x = 42;
let y = 3.14;
let z = true;
let msg = "Hello";

// Test typed variable declarations
int a = 10;
float b = 20;
bool c = false;
str d = "World";

// Test type conversion
int i = 3.14;  // float to int
float f = 42;  // int to float
str s = 123;   // int to string

// Test uninitialized variables
int uninit_int;
float uninit_float;
bool uninit_bool;
str uninit_str;

// Test const variables
const e = 2.718;
const int pi = 3;
const str greeting = "Hi";

// Print all values to verify
print(x, y, z, msg);
print(a, b, c, d);
print(i, f, s);
print(uninit_int, uninit_float, uninit_bool, uninit_str);
print(e, pi, greeting);

// Test block scoping
{
    let x = "shadowed";
    print(x);  // Should print "shadowed"
}
print(x);  // Should print 42
