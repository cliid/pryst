// Test basic escape sequences
print("Hello\nWorld");  // Newline
print("Tab\there");     // Tab
print("Quote\"here");   // Quote
print("Slash\\here");   // Backslash

// Test hex escape sequences
print("\x41\x42\x43"); // ABC
print("\x48\x69");     // Hi

// Test mixed content
print("Mixed\tContent\nWith\"Escapes");

// Test invalid sequences (should be preserved)
print("\\z");  // Invalid escape
print("\\");   // Single backslash
