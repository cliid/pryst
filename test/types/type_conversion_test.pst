// Test type conversions and default values
fn test_conversions() -> void {
    // Test integer to float conversion
    let x: int = 42;
    let y: float = x;  // Should use int2float
    print(y);  // Should output 42.0

    // Test float to integer conversion
    let f: float = 3.14;
    let i: int = f;  // Should use float2int
    print(i);  // Should output 3

    // Test string conversions
    let num_str: string = x;  // Should use int2str
    print(num_str);  // Should output "42"

    let float_str: string = f;  // Should use float2str
    print(float_str);  // Should output "3.14"
}

fn test_default_values() -> void {
    // Test default value initialization
    let default_int: int;
    print(default_int);  // Should output 0

    let default_float: float;
    print(default_float);  // Should output 0.0

    let default_string: string;
    print(default_string);  // Should output empty string

    let default_ptr: int*;
    print(default_ptr == null);  // Should output true
}

fn main() -> void {
    test_conversions();
    test_default_values();
}
