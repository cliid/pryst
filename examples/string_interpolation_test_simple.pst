// Simple test for string interpolation
int main() {
    // Basic variable declarations
    let name = "World";
    let count = 42;
    let pi = 3.14159;
    let height = 1.75;
    let isStudent = true;

    // Basic interpolation
    print("Hello, {name}!");

    // Multiple interpolations
    print("Count is {count} and pi is {pi}");

    // Format specifiers for floating-point numbers
    print("Pi with 2 decimal places: {pi:.2f}");
    print("Height formatted: {height:.1f} meters");

    // Integer formatting with padding
    print("Count with padding: {count:03d}");

    // Boolean conversion
    print("Is student: {isStudent}");

    // Expression in interpolation
    print("Next year's count: {count + 1}");

    // Multiple format types in one string
    print("Summary: {name} has count {count:02d} and pi {pi:.3f}");

    return 0;
}
