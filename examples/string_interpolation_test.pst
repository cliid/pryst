// Test string interpolation functionality
int main() {
    let name = "Alice";
    let age = 30;
    let pi = 3.14159;

    // Basic interpolation
    print("Hello, {name}!");

    // Multiple interpolations
    print("Name: {name}, Age: {age}");

    // Format specifier for precision
    print("Pi is {pi:.2f}");

    // Nested expressions
    print("Sum: {age + 5}");

    return 0;
}
